{
  "type": "delphi deploy config",
  "version": 1,
  "paths": {
    "package": "../delphi/nowcast"
  },
  "actions": [

    "// nowcasting sources",
    {
      "type": "move",
      "src": "src/",
      "dst": "[[package]]/",
      "match": "^(.+)(\\.py)$",
      "add-header-comment": true
    },
    {
      "type": "move",
      "src": "src/sensors/",
      "dst": "[[package]]/sensors/",
      "match": "^(.+)(\\.py)$",
      "add-header-comment": true
    }

  ]
}
